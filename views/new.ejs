    <% include partials/header %>
    
    <h1 style = "text-align:center;">Create a new campground</h1>
    
    
    
    <div class="container">
        <div class="row">
            <div style = "width:30%; margin: 25px auto;">
                <form action = "/campgrounds" , method = "POST">
                    <div class="form-group">
                        <input class = "form-control" name = "name" type = "text" placeholder = "name"/>
                    </div>
                    
                    <div class="form-group">
                        <input class = "form-control" name = "image" type = "text" placeholder = "image url"/>
                    </div>
                    
                    <div class="form-group">
                        <input class = "form-control" name = "desc" type = "text" placeholder = "description"/>
                    </div>
                    
                    <div class="form-group">
                        <input class = "btn btn-large btn-primary btn-block" type = "submit"/>
                    </div>
                </form>
                <a href = "/campgrounds">Back</a>
            </div>
            
        </div>
    </div>

    
    
    
